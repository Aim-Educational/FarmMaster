@model SpeciesEditViewModel
@{
    ViewData["Title"] = "Edit - Species";
}

<section class="ui top attached header">
    <h2>Edit Species</h2>
</section>
<section class="ui attached segment">
    <form class="ui form" method="post" asp-action="EditSpecies">
        <input type="hidden" asp-for="Species.SpeciesId" />
        <input type="hidden" asp-for="Species.Timestamp"/>
        <input type="hidden" asp-for="Species.CharacteristicListId"/>

        <section class="field">
            <label>Name</label>
            <input asp-for="Species.Name" placeholder="Name" />
            <span class="@GlobalConstants.FormErrorClasses" asp-validation-for="Species.Name"></span>
        </section>
        <section class="field">
            <div class="ui checkbox">
                <input type="checkbox" asp-for="Species.IsPoultry" />
                <label>Species is poultry?</label>
            </div>
        </section>

        <partial name="_ViewModelWithMessagePartial" model="Model" />
        <div id="divAllErrors" class="ui error message transition hidden"></div>

        <button class="ui fluid primary button" type="submit">Edit Species</button>
    </form>
</section>
<section class="ui attached segment">
    <h2 class="ui dividing header">Characteristics</h2>
    <partial name="_ComponentCharacteristics" />
</section>

@section Scripts {
    <script>
        $(".dropdown").dropdown();
        $(".accordion").accordion();
    </script>
}