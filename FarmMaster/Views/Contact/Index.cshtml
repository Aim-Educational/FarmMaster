@model ContactIndexViewModel
@{
    ViewData["Title"] = "Contacts";
    ViewData["NavName"] = "Contacts";
}

<div id="app">
    <window title="Contacts">
        <a class="bottom margined icon blue button" asp-action="Create">
            <i class="las la-plus"></i>
            <span>Create new contact</span>
        </a>
        <fm-value-table selection="none"
                        :rows="rows"
                        :values="values">
        </fm-value-table>
    </window>
</div>

@section Scripts {
    <script>
        new Vue({
            el: "#app",
            data: {
                rows: [
                    { name: "Name", bind: "name", sort: true },
                    { name: "Type", bind: "type", sort: true }
                ],
                values: [
                    @foreach(var contact in Model.Contacts)
                    {
                        @:{ name: { value: "@contact.Name", href: "@Url.Action("Edit", "Contact", new { contactId = contact.ContactId })" }, 
                        @:  type: "@contact.Type"
                        @:},
                    }
                ]
            }
        });
    </script>
}