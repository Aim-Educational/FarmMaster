<!DOCTYPE html>
<html>
<head>
    <partial name="_LayoutCommonHeadPartial" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <partial name="_NavbarPartial" />

    <main role="main" class="main container">
        <section class="ui grid">
            <div class="zero wide mobile one wide computer three wide large screen column"></div>
            <div class="sixteen wide mobile fourteen wide computer ten wide large screen centered column">
                @if (ViewData.ContainsKey("Breadcrumb") && !ViewData.ContainsKey("CustomBreadcrumb"))
                {
                    <div class="ui breadcrumb">
                        @{
                            var crumbs = ViewData["Breadcrumb"] as IDictionary<string, string>;
                            var crumbLength = crumbs.Count();
                            var index = 0;
                        }
                        @foreach (var crumb in crumbs)
                        {
                            <a class="section @(index == crumbLength - 1 ? "active" : "")" href="@crumb.Value">@crumb.Key</a>
                            <div class="divider">/</div>
                            index++;
                        }
                    </div>
                }

                @RenderBody()
            </div>
            <div class="zero wide mobile one wide computer three wide large screen column"></div>
        </section>
    </main>

    <footer>
        <div class="ui inverted divider"></div>
        <div class="ui centered grid" style="background-color: white;">
            <p class="ten wide column right aligned">
                &copy; 2019 - AimEducational
            </p>
        </div>
    </footer>

    <partial name="_LayoutCommonJavascriptPartial" />
    @RenderSection("Scripts", required: false)
</body>
</html>
