@model RoleCreateViewModel
@{
    ViewData["Title"] = "Create - Role";

    const int CHECKBOXES_PER_ROW = 6;
}

<h1>Create Role</h1>

<form class="ui form" asp-action="Create" method="post">
    <section class="field">
        <input asp-for="Name" placeholder="Name" />
    </section>

    <h2 class="ui dividing header">Permissions</h2>
    @{int permsToSkip = 0;}
    @while(permsToSkip < Model.AllKnownPermissions.Count())
    {
        <section class="inline fields">
            @foreach(var perm in Model.AllKnownPermissions.Skip(permsToSkip).Take(CHECKBOXES_PER_ROW))
            {
                <section class="field">
                    <div class="ui checkbox">
                        <input type="checkbox" asp-for="Permissions[perm.InternalName]" />
                        <label>@perm.Description</label>
                    </div>
                </section>
                permsToSkip++;
            }
        </section>
    }

    <button class="ui primary fluid button" type="submit">Create Role</button>
</form>

@section Scripts {
    <script>
        $(".ui.checkbox").checkbox();

        Validation.hookupForm(document.querySelector(".ui.form"));
    </script>
}