@model AdminUsersViewModel
@{
    ViewData["Title"] = "Users";
    ViewData["NavName"] = "Users";
}

<div id="app">
    <window title="Users">
        <farm-table selection="none"
                    :rows="rows"
                    :values="values">
        </farm-table>
    </window>
</div>

@section Scripts {
    <script>
        new Vue({
            el: "#app",

            data: {
                rows: [
                    { name: "Username", bind: "username", sort: true },
                    { name: "Email",    bind: "email",    sort: true }
                ],
                values: [
                    @foreach(var user in Model.Users)
                    {
                        @:{
                            @:username: { value: "@user.UserName", href: "/Admin/ManageUser/@user.Id" }, 
                            @:email: "@user.Email"
                        @:},
                    }
                ]
            }
        });
    </script>
}